<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/settings_activity"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".SettingsActivity"
              android:orientation="vertical"
              android:background="@drawable/bluegradient">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="69dp">
        <ImageView android:layout_width="50sp" android:layout_height="50dp"
                   android:src="@drawable/baseline_arrow_back_ios_new_24"
                   android:padding="14dp"
                   android:layout_marginStart="2dp"
                   android:contentDescription="rr"
                   android:id="@+id/back_button2"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="SET PATTERN"
                  android:textSize="18sp"
                  android:textColor="@color/white"
                  android:layout_alignParentTop="true"
                  android:layout_centerInParent="true"

                  android:id="@+id/settings_title" android:layout_marginTop="13dp"
                  android:layout_centerVertical="true"/>


    </RelativeLayout>



</LinearLayout>





