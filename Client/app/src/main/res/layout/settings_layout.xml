<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/settings_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Settings.SettingsActivity"
                 android:orientation="vertical"
                   android:background="@drawable/bluegradient">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="62dp">
        <ImageView android:layout_width="50sp" android:layout_height="50dp"
                   android:src="@drawable/back_arrow"
                   android:padding="14dp"
                   android:layout_marginStart="2dp"
                   android:contentDescription="@string/left_arrow"
                   android:id="@+id/back_button"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/settings"
                  android:textSize="20sp"
                  android:textColor="@color/white"
                  android:layout_alignParentTop="true"
                  android:layout_centerInParent="true"

                  android:id="@+id/settings_title" android:layout_marginTop="13dp"
                  android:layout_centerVertical="true"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="477dp">

        <LinearLayout  android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="142dp">

                <com.google.android.material.imageview.ShapeableImageView android:layout_height="113dp"
                                                                          android:layout_width="115dp"
                                                                          android:paddingTop="1dp"

                                                                          android:layout_marginBottom="-5dp"

                                                                          android:foregroundGravity="center"
                                                                          android:layout_gravity="center"
                                                                          android:id="@+id/profilePicture"
                                                                          app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                                                                          android:padding="2dp"
                                                                          android:src="@drawable/ic_userpic"


                />
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="22sp"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:layout_gravity="center"
                      android:id="@+id/user_name"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edit_profile_button"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:text="@string/edit_profile"
                    android:textColor="@color/white"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:id="@+id/NavigateToSetPattern"
                    android:background="@drawable/settings_menutab"
                    android:layout_marginTop="40dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/pattern_icon"
                            android:contentDescription="@string/pattern_icon"


                    >

                    </ImageView>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/edit_pattern" android:textColor="@color/white"
                              android:layout_marginStart="40dp"
                              android:layout_centerVertical="true"
                    />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:id="@+id/navigateToSetKeyword"
                    android:background="@drawable/settings_menutab"
                    android:layout_marginTop="10dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_password_24"
                            android:contentDescription="@string/pattern_icon"


                    >

                    </ImageView>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Change passcode" android:textColor="@color/white"
                              android:layout_marginStart="40dp"
                              android:layout_centerVertical="true"
                    />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:id="@+id/LogOutButton"
            android:background="@color/red"
            android:layout_marginTop="40dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Sign out" android:textColor="@color/white"
                      android:layout_marginStart="40dp"
                      android:height="20dp"
                      android:layout_centerVertical="true"/>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>





