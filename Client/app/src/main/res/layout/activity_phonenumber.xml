<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SettingsActivity"
    android:orientation="vertical"
    android:background="@drawable/bluegradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Edit important phone numbers"
            android:textColor="@color/white"
            android:textSize="29dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textInputPhoneNumber"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corners_ui"
        android:backgroundTint="@color/lighterblue"
        android:gravity="center"
        android:hint="Enter phone number" />

    <TextView
        android:id="@+id/textInputSecondPhoneNumber"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corners_ui"
        android:backgroundTint="@color/lighterblue"
        android:gravity="center"
        android:hint="Enter phone number" />

    <TextView
        android:id="@+id/textInputThirdPhoneNumber"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corners_ui"
        android:backgroundTint="@color/lighterblue"
        android:gravity="center"
        android:hint="Enter phone number" />

</LinearLayout>